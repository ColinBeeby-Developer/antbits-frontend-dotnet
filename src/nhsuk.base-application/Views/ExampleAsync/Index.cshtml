@{
    ViewBag.Title = "Search results for " + @Model.Org;
    ViewBag.Description = "Example async form results page";
}
@model ResultViewModel


<h1>Results for @Model.Org</h1>

@if (@Model.Results.ToArray().Length == 0)
{
    <p>Sorry this org does not exist.</p>
}
else
{

    <ul class="nhsuk-list nhsuk-list--border nhsuk-u-padding-top-4">
        @foreach (nhsuk.base_application.Models.Result result in Model.Results)
        {
            <li class="nhsuk-u-padding-bottom-4 nhsuk-u-margin-bottom-4">
                <h2 class="nhsuk-heading-m nhsuk-u-margin-bottom-4"><a href="@result.Url">@result.Name</a></h2>
                <p class="nhsuk-body-s nhsuk-u-margin-bottom-0">@result.Description</p>
            </li>
        }
    </ul>
}

